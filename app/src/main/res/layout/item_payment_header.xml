<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:stretchColumns="*">

    <TextView
        android:id="@+id/headerNameTextView"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:gravity="center"
        android:fontFamily="@font/pacifico"
        android:textSize="16dp"
        android:textColor="@color/orange"
        android:text="Name" />

    <TextView
        android:id="@+id/headerSurnameTextView"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:gravity="center"
        android:fontFamily="@font/pacifico"
        android:textSize="16dp"
        android:textColor="@color/orange"
        android:text="Surname" />

    <TextView
        android:id="@+id/headerPhoneTextView"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:gravity="center"
        android:fontFamily="@font/pacifico"
        android:textSize="16dp"
        android:textColor="@color/orange"
        android:text="Phone" />

    <TextView
        android:id="@+id/headerMonthYearTextView"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:gravity="center"
        android:fontFamily="@font/pacifico"
        android:textSize="16dp"
        android:textColor="@color/orange"
        android:text="Month - Year" />

    <TextView
        android:id="@+id/headerTotalFeesTextView"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:gravity="center"
        android:fontFamily="@font/pacifico"
        android:textSize="16dp"
        android:textColor="@color/orange"
        android:text="Total Fees" />

    <TextView
        android:id="@+id/headerGeneralFeesTextView"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:gravity="center"
        android:fontFamily="@font/pacifico"
        android:textSize="16dp"
        android:textColor="@color/orange"
        android:text="General Fees" />

    <TextView
        android:id="@+id/headerElevatorFeesTextView"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:gravity="center"
        android:fontFamily="@font/pacifico"
        android:textSize="16dp"
        android:textColor="@color/orange"
        android:text="Elevator Fees" />

    <TextView
        android:id="@+id/headerHeatingFeesTextView"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:gravity="center"
        android:fontFamily="@font/pacifico"
        android:textSize="16dp"
        android:textColor="@color/orange"
        android:text="Heating Fees" />

</LinearLayout>